<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrasferActivity">

    <include
        layout="@layout/app_bar_main2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hedef Hesap"
            android:textSize="15sp"

            android:layout_gravity="center"

            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/transferHesap"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Hedef hesap" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gonderilecek Tutar"
            android:textSize="15sp"
            android:layout_gravity="center"

            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/transferTutar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Tutar :7000 ex."
            android:inputType="number" />

        <Button
            android:id="@+id/transferYap1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="GÃ–NDER" />



    </LinearLayout>

</LinearLayout>